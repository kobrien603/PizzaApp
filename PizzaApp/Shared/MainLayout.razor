@inherits LayoutComponentBase
@namespace PizzaApp

<PageTitle>Pizza App</PageTitle>

<MudThemeProvider @bind-IsDarkMode="ThemeService.IsDarkMode" Theme="ThemeService.Theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="8">
        <MudToggleIconButton @bind-Toggled="MenuOpened" Icon="@Icons.Material.Filled.Menu" ToggledIcon="@Icons.Material.Filled.Close" Color="Color.Inherit" ToggledColor="Color.Inherit" Edge="Edge.Start" />
        <MudText Typo="Typo.h5" Class="ml-3">Pizza Place</MudText>
        <MudSpacer />
        <UserNavMenu />
    </MudAppBar>

    <MudDrawer @bind-Open="MenuOpened" ClipMode="DrawerClipMode.Always" Elevation="2">
        <SidebarNav />
    </MudDrawer>

    <MudMainContent>
        <div class="main_container pb-3">
            <div class="content">
                @Body
            </div>
        </div>
        <Footer />
    </MudMainContent>
</MudLayout>